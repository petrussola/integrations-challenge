{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@primer-io/app-framework": ["app-framework"]
    },
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2020",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "sourceMap": true
  },
  "typeAcquisition": {
    "enable": true,
    "include": ["typings/*"]
  }
}
